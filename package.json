{
  "name": "react-helium",
  "version": "0.0.0-development",
  "description": "A React component library",
  "author": "Alex Disdier",
  "license": "MIT",
  "keywords": [
    "react",
    "javascript",
    "typescript"
  ],
  "main": "lib/src/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexdisdier/react-helium.git"
  },
  "dependencies": {
    "dompurify": "^2.0.7",
    "draft-js": "^0.11.1",
    "draftjs-to-html": "^0.8.4",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-jss": "8.6.1",
    "react-scripts": "3.2.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "start": "start-storybook -p 6007",
    "test:unit": "react-scripts test",
    "test:ci": "yarn test:unit t -- --coverage --watchAll=false",
    "lint": "eslint './src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "build-storybook": "build-storybook",
    "clean": "rm -rf ./lib",
    "prebuild": "yarn clean",
    "build": "tsc --build \"./tsconfig.build.json\"",
    "semantic-release": "semantic-release"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@semantic-release/git": "^7.0.18",
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/addon-info": "^5.2.4",
    "@storybook/addon-knobs": "^5.2.4",
    "@storybook/addon-links": "^5.2.4",
    "@storybook/addons": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "@types/draft-js": "^0.10.37",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/jest": "^24.0.19",
    "@types/lodash.uniqueid": "^4.0.6",
    "@types/node": "12.11.2",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "@types/react-jss": "^8.6.4",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-localstorage-mock": "^2.4.0",
    "lint-staged": "^9.4.1",
    "lodash.uniqueid": "^4.0.1",
    "prettier": "^1.18.2",
    "react-docgen-typescript-loader": "^3.3.0",
    "semantic-release": "^15.13.30",
    "storybook-readme": "^5.0.8",
    "ts-jest": "^24.1.0"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "release": {
    "branch": "master",
    "preset": "eslint",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "${nextRelease.version}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg -p eslint"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint --fix --quiet",
      "git add"
    ]
  }
}
