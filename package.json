{
  "name": "react-helium",
  "version": "2.0.0",
  "description": "A React component library",
  "author": "Alex Disdier",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexdisdier/react-helium.git"
  },
  "keywords": [
    "react",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "start": "start-storybook -p 6007",
    "test:unit": "react-scripts test",
    "test:ci": "yarn test:unit t -- --coverage --watchAll=false",
    "lint": "eslint './src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "clean": "rm -rf ./lib",
    "prebuild": "yarn clean",
    "build": "tsc --build \"./tsconfig.build.json\"",
    "copy-files": "copyfiles -u 1 src/style/assets/**/*.otf src/style/base.css lib/",
    "postbuild": "yarn run copy-files",
    "build:watch": "yarn build -w",
    "build-storybook": "build-storybook",
    "clean-storybook": "rm -rf storybook-static",
    "deploy-storybook": "yarn clean-storybook && yarn build-storybook && yarn storybook-to-ghpages -- --existing-output-dir=storybook-static",
    "semantic-release": "semantic-release",
    "release": "release-it"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "dompurify": "^2.3.4",
    "draft-js": "^0.11.7",
    "draft-js-export-html": "^1.4.1",
    "lodash.uniqueid": "^4.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-jss": "^10.9.0",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.5",
    "@semantic-release/git": "^7.0.18",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^5.2.4",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/addons": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@storybook/storybook-deployer": "^2.8.10",
    "@types/draft-js": "^0.11.8",
    "@types/jest": "^27.0.3",
    "@types/lodash.uniqueid": "^4.0.6",
    "@types/node": "^16.11.17",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-jss": "^10.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "^2.1.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^3.0.5",
    "jest": "^27.4.7",
    "jest-localstorage-mock": "^2.4.18",
    "lint-staged": "^9.4.1",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "release-it": "^14.12.4",
    "semantic-release": "^15.13.30",
    "storybook-readme": "^5.0.9",
    "ts-jest": "^27.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]nn${nextRelease.notes}"
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint --fix --quiet",
      "git add"
    ]
  }
}
